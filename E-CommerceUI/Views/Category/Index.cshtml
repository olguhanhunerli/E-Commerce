@using E_CommerceUI.Dtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="page-title">Tables</h4>
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Kategoriler</div>
			</div>
			<div class="card-body">
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Description</th>
							<th scope="col">Status</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.CategoryID</td>
								<td>@item.CategoryName</td>
								<td>@item.CategoryDescription</td>
								<td>@item.CategoryStatus</td>
								<td><a class ="btn btn-outline-primary ">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<a class="btn btn-success" asp-controller="Category" asp-action="CreateCategory">Kategori Ekle</a>
			</div>
		</div>
	</div>
</div>



