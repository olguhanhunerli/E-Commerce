@using E_CommerceUI.Dtos.CategoryDtos
@model CreateCategoryDtos
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="Category" asp-action="CreateCategory">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Kategori Adını Giriniz</label>
								<input type="text" class="form-control" asp-for="CategoryName" id="categoryname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categorydescription">Kategori Açıklaması Giriniz</label>
								<input type="text" class="form-control" asp-for="CategoryDescription" id="categorydescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categorystatus">Statüsünü Giriniz</label>
								<select asp-for="CategoryStatus" class="form-control" id="categorystatus">
									<option value="true">True</option>
									<option value="false">False</option>
								</select>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Kategoriyi Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

